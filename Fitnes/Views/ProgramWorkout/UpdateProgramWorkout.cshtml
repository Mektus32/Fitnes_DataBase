@using Fitnes.Storage.Repository 
@model (ProgramWorkout, List<KeyValuePair<int, string>>)
@{
    Layout = "_Layout";
}

@using (Html.BeginForm("Update", "ProgramWorkout", FormMethod.Post)) {
    <fieldset class="container">
        <input type="hidden" name="id" value="@Model.Item1.ProgramWorkoutId" />
        <legend>Update data</legend>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" required class="form-control" name="Name" id="name" aria-describedby="nameHelp" value="@Model.Item1.Name">
        </div>
        <div class="form-group">
            <label for="selectAuthor">Choose author</label>
            <select class="form-control" name="AuthorId" id="selectAuthor">
                @foreach (var elem in Model.Item2) {
                    if (elem.Key == Model.Item1.AuthorId) {
                        <option value="@elem.Key" selected>@elem.Value</option>
                    }
                    else {
                        <option value="@elem.Key">@elem.Value</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label for="period">Period</label>
            <input type="number" required class="form-control" min="1" name="Period" id="period" aria-describedby="periodHelp" value="@Model.Item1.Period">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </fieldset>
}