@using Fitnes.Storage.Manager.ProgramWorkouts
@model List<ProgramWorkoutWithAuthorName>
@{
    Layout = "_Layout";
}
    <div class="container">
        @using (Html.BeginForm("SearchProgramWorkout", "ProgramWorkout", FormMethod.Post)) {
            <div class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" required type="text" name="text" placeholder="Search" value="">
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary">
                        <input type="radio" name="term" id="option1" value="1" autocomplete="off" checked> Name
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="term" id="option2" value="2" autocomplete="off"> Author name
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="term" id="option3" value="3" autocomplete="off"> Period
                    </label>
                </div>
            </div>
        }
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ProgramWorkoutId</th>
                    <th scope="col">Name</th>
                    <th scope="col">Author name</th>
                    <th scope="col">Period</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var elem in Model) {
                    <tr class="table-success">
                        <td>@elem.Id</td>
                        <td>@elem.Name</td>
                        <td>@elem.AuthorName</td>
                        <td>@elem.Period</td>
                        <td>
                            @using (Html.BeginForm("UpdateProgramWorkout", "ProgramWorkout", FormMethod.Get)) {
                                <div>
                                    <input type="hidden" name="id" value="@elem.Id" />
                                    <input type="submit" class="btn btn-outline-success" value="Update" />
                                </div>
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm("DeleteProgramWorkout", "ProgramWorkout", FormMethod.Get)) {
                                <div>
                                    <input type="hidden" name="id" value="@elem.Id" />
                                    <input type="submit" class="btn btn-outline-success" value="Delete" />
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @using (Html.BeginForm("CreateProgramWorkout", "ProgramWorkout", FormMethod.Get)) {
            <div>
                <input type="submit" class="btn btn-success" value="Add program workout" />
            </div>
        }
        @using (Html.BeginForm("ShowAuthors", "Author", FormMethod.Get)) {
            <div>
                <input type="submit" class="btn btn-success" value="Show authors" />
            </div>
        }
    </div>