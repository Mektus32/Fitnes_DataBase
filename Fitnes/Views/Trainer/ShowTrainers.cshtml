@using Fitnes.Storage.Manager.Trainers
@model List<TrainerWithPWAndEmployeeName>
@{
    Layout = "_Layout";
}
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">TrainerId</th>
                    <th scope="col">Name</th>
                    <th scope="col">Program workout</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var elem in Model) {
                    <tr class="table-success">
                        <td>@elem.Id</td>
                        <td>@elem.Name</td>
                        <td>@elem.ProgramWorkoutName</td>
                        <td>
                            @using (Html.BeginForm("UpdateTrainer", "Trainer", FormMethod.Get)) {
                                <div>
                                    <input type="hidden" name="id" value="@elem.Id" />
                                    <input type="submit" class="btn btn-outline-success" value="Update" />
                                </div>
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm("DeleteTrainer", "Trainer", FormMethod.Get)) {
                                <div>
                                    <input type="hidden" name="id" value="@elem.Id" />
                                    <input type="submit" class="btn btn-outline-success" value="Delete" />
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @using (Html.BeginForm("CreateTrainer", "Trainer", FormMethod.Get)) {
            <div>
                <input type="submit" class="btn btn-success" value="Add trainer" />
            </div>
        }
    </div>